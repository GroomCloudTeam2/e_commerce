    "/users/me/sales": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "매출 통계 조회",
        "description": "periodType=DAILY/MONTHLY, date는 선택",
        "parameters": [
          {
            "name": "periodType",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "DAILY",
                "MONTHLY"
              ]
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-05-01"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SalesStatResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "쿼리값 검증 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
