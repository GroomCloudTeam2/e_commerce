{
  "openapi": "3.0.3",
  "info": {
    "title": "Review & AI Review API",
    "version": "1.0.0",
    "description": "JWT 인증 기반 리뷰 API"
  },
  "servers": [
    { "url": "http://localhost:8080" }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/reviews/items/{productId}/": {
      "post": {
        "summary": "주문 상품 리뷰 작성",
        "description": "토큰의 사용자 정보를 사용하여 특정 상품에 대한 리뷰를 작성합니다.",
        "tags": ["Review"],
        "parameters": [
          { "name": "productId", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateReviewRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "리뷰 생성 성공" },
          "401": { "description": "인증 실패 (JWT 누락 또는 만료)" }
        }
      }
    },
    "/reviews/item/{productId}/": {
      "get": {
        "summary": "상품 리뷰 목록 및 통계 조회",
        "description": "해당 상품의 모든 리뷰를 페이징하여 조회합니다. (비로그인 가능)",
        "tags": ["Review"],
        "security": [],
        "parameters": [
          { "name": "productId", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } },
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 0 } },
          { "name": "size", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "avgRating": { "type": "number", "format": "double" },
                    "reviewCount": { "type": "integer" },
                    "aiReview": { "type": "string", "nullable": true },
                    "reviews": { "type": "array", "items": { "$ref": "#/components/schemas/Review" } },
                    "pagination": { "$ref": "#/components/schemas/Pagination" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reviews/{reviewId}": {
      "delete": {
        "summary": "리뷰 삭제",
        "description": "토큰의 사용자 정보와 리뷰 작성자를 대조하여 본인인 경우에만 삭제합니다.",
        "tags": ["Review"],
        "parameters": [
          { "name": "reviewId", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
        ],
        "responses": {
          "204": { "description": "삭제 성공" },
          "401": { "description": "인증 실패" },
          "403": { "description": "권한 없음 (작성자 불일치)" },
          "404": { "description": "리뷰 없음" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Review": {
        "type": "object",
        "properties": {
          "reviewId": { "type": "string", "format": "uuid" },
          "orderId": { "type": "string", "format": "uuid" },
          "rating": { "type": "integer" },
          "content": { "type": "string" },
          "category": { "$ref": "#/components/schemas/ReviewCategory" }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "totalElements": { "type": "integer" },
          "totalPages": { "type": "integer" },
          "currentPage": { "type": "integer" },
          "isLast": { "type": "boolean" }
        }
      },
      "ReviewCategory": {
        "type": "string",
        "enum": ["PRICE", "DESIGN", "PERFORMANCE", "CONVENIENCE", "QUALITY"]
      },
      "CreateReviewRequest": {
        "type": "object",
        "required": ["orderId", "rating", "content"],
        "properties": {
          "orderId": { "type": "string", "format": "uuid" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
          "content": { "type": "string" }
        }
      }
    }
  }
}
